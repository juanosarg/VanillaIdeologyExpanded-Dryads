<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Stonedigger -->
	<ThingDef ParentName="DryadBase">
		<defName>VDE_Dryad_Stonedigger</defName>
		<label>stonedigger dryad</label>
		<description>todo.\n\nIn general, dryads are mammal-like creatures that have a symbiotic relationship with the Gauranlen tree. They reproduce together with their tree, which contains a hidden dryad queen. Dryads can morph into various specialized castes.</description>
		<statBases>
			<MoveSpeed>2.24</MoveSpeed>
			<ArmorRating_Blunt>0.75</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.85</ArmorRating_Sharp>
		</statBases>
		<comps>
			<li class="AnimalBehaviours.CompProperties_DigPeriodically">
				<ticksToDig>120000</ticksToDig>
				<onlyWhenTamed>true</onlyWhenTamed>
				<digBiomeRocks>true</digBiomeRocks>
			</li>
		</comps>
		<race>
			<useMeatFrom>Dryad_Basic</useMeatFrom>
			<lifeStageAges>
				<li>
					<def>AnimalAdult</def>
					<soundWounded>Pawn_Dryad_Barkskin_Wounded</soundWounded>
					<soundCall>Pawn_Dryad_Barkskin_Call</soundCall>
				</li>
			</lifeStageAges>
			<baseBodySize>0.667</baseBodySize>
			<baseHealthScale>0.8</baseHealthScale>
			<trainability>Intermediate</trainability>
			<trainableTags>
				<li>Basic</li>
				<li>Combat</li>
			</trainableTags>
			<untrainableTags>
				<li>Work</li>
				<li>Help</li>
			</untrainableTags>
		</race>
	</ThingDef>
	<PawnKindDef ParentName="DryadKindBase">
		<defName>VDE_Dryad_Stonedigger</defName>
		<label>stonedigger dryad</label>
		<race>VDE_Dryad_Stonedigger</race>
		<lifeStages>
			<li>
				<bodyGraphicData>
					<texPath>Things/Pawn/Animal/DryadStonedigger/DryadStonedigger</texPath>
					<drawSize>1.5</drawSize>
				</bodyGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>Things/Pawn/Animal/Dryad_Carrier/Dessicated_DryadCarrier</texPath>
					<drawSize>1.5</drawSize>
				</dessicatedBodyGraphicData>
			</li>
		</lifeStages>
	</PawnKindDef>
	<!-- Spitter -->
	<ThingDef ParentName="DryadBase">
